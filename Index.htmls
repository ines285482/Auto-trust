        // 3. Badge Simulator Logic
        const garageInput = document.getElementById('garageNameInput');
        const garageDisplay = document.getElementById('garageNameDisplay');
        
        if(garageInput) {
            garageInput.addEventListener('input', (e) => {
                const val = e.target.value.toUpperCase();
                garageDisplay.textContent = val || "VOTRE GARAGE";
            });
        }

        // 4. ROI Calculator Logic
        const carsInput = document.getElementById('carsInput');
        const marginInput = document.getElementById('marginInput');
        const carsDisplay = document.getElementById('carsDisplay');
        const marginDisplay = document.getElementById('marginDisplay');
        const revenueDisplay = document.getElementById('revenueDisplay');

        function updateROI() {
            const cars = parseInt(carsInput.value);
            const margin = parseInt(marginInput.value);
            const lostRevenue = Math.floor((cars * 0.20) * margin);
            
            carsDisplay.textContent = cars;
            marginDisplay.textContent = margin + " ‚Ç¨";
            revenueDisplay.textContent = "-" + lostRevenue.toLocaleString('fr-FR') + " ‚Ç¨";
        }

        if(carsInput && marginInput) {
            carsInput.addEventListener('input', updateROI);
            marginInput.addEventListener('input', updateROI);
        }

        // 5. FAQ Generation
        const faqData = [
            { q: "Je suis nul en informatique, est-ce compliqu√© ?", a: "C'est notre force. Si vous savez envoyer un SMS, vous savez utiliser AutoTrust. Tout est pr√©-configur√©. On vous aide m√™me √† configurer votre fiche Google si besoin." },
            { q: "Est-ce que je suis engag√© ?", a: "Non. Jamais. Vous arr√™tez quand vous voulez en un clic depuis votre espace. Nous voulons que vous restiez parce que √ßa vous rapporte de l'argent, pas parce que vous √™tes bloqu√©." },
            { q: "Comment fonctionne le filtre d'avis ?", a: "Le client re√ßoit un lien. On lui demande d'abord s'il est satisfait. S'il clique NON, on ouvre un formulaire de contact (email) pour que vous r√©gliez le probl√®me. S'il clique OUI, on l'envoie sur Google pour mettre 5 √©toiles." },
            { q: "Et si √ßa ne marche pas pour moi ?", a: "Garantie Satisfait ou Rembours√© pendant 30 jours. On vous rend votre argent, sans question. Vous ne prenez aucun risque." }
        ];

        const faqContainer = document.getElementById('faq-container');
        
        if(faqContainer) {
            faqData.forEach((item, index) => {
                const faqItem = document.createElement('div');
                faqItem.className = "border-b border-slate-100 pb-4";
                faqItem.innerHTML = `
                    <button class="w-full flex justify-between items-center py-4 text-left hover:text-blue-600 transition group" onclick="toggleFaq(${index})">
                        <span class="font-bold text-lg text-slate-900 group-hover:text-blue-600">${item.q}</span>
                        <i data-lucide="chevron-down" class="w-5 h-5 text-slate-400 transform transition-transform duration-200" id="icon-${index}"></i>
                    </button>
                    <div id="answer-${index}" class="hidden text-slate-600 text-base leading-relaxed pb-4">
                        ${item.a}
                    </div>
                `;
                faqContainer.appendChild(faqItem);
            });
            lucide.createIcons();
        }

        function toggleFaq(index) {
            const answer = document.getElementById(`answer-${index}`);
            const icon = document.getElementById(`icon-${index}`);
            
            if (answer.classList.contains('hidden')) {
                answer.classList.remove('hidden');
                icon.classList.add('rotate-180');
            } else {
                answer.classList.add('hidden');
                icon.classList.remove('rotate-180');
            }
        }

        // 6. Sticky CTA Logic
        const stickyCta = document.getElementById('sticky-cta');
        if(stickyCta) {
            window.addEventListener('scroll', () => {
                if (window.scrollY > 800) {
                    stickyCta.classList.remove('translate-y-full');
                } else {
                    stickyCta.classList.add('translate-y-full');
                }
            });
        }
    </script>
